<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <TextView
       android:id="@+id/topics_title"
       style="@style/title_bar"
       android:text="@string/themenrouten" />
    
    <ScrollView
        android:layout_below="@id/topics_title"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
	    
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:orientation="vertical">
            
<!-- 		    <TextView -->
<!-- 		        style="@style/text_area" -->
<!-- 		        android:text="@string/about_version" -->
<!-- 		        android:layout_marginTop="10dip" /> -->
		    
		    <RadioGroup
		        android:id="@+id/topics_radios"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content" 
		        android:paddingTop="5dip"
		        android:paddingBottom="10dip">
		        
		        <RadioButton 
                    android:id="@+id/topics_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/no_topic"
                    android:visibility="gone" />
		        
		        <RadioButton 
		            android:id="@+id/topics_1"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
                    android:visibility="gone" />
		        
		        <TextView
                    android:id="@+id/topics_tv1"
			        style="@style/text_area"
			        android:visibility="gone"/>
		        
		        <View
		            android:id="@+id/div_1"
		            style="@style/divider_light"
                    android:visibility="gone" />
		        
		        <RadioButton 
		            android:id="@+id/topics_2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
                    android:visibility="gone" />
		        
		        <TextView
                    android:id="@+id/topics_tv2"
		            style="@style/text_area"
		            android:visibility="gone"/>
		        
		        <View
                    android:id="@+id/div_2"
                    style="@style/divider_light"
                    android:visibility="gone" />
		        
		        <RadioButton 
		            android:id="@+id/topics_3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
                    android:visibility="gone" />
		        
		        <TextView
                    android:id="@+id/topics_tv3"
		            style="@style/text_area" 
		            android:visibility="gone"/>
		        
		        <View
                    android:id="@+id/div_3"
                    style="@style/divider_light"
                    android:visibility="gone" />
		        
		        <RadioButton 
                    android:id="@+id/topics_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/topics_tv4"
                    style="@style/text_area" 
                    android:visibility="gone"/>
                
                <View
                    android:id="@+id/div_4"
                    style="@style/divider_light"
                    android:visibility="gone" />
                
                <RadioButton 
                    android:id="@+id/topics_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/topics_tv5"
                    style="@style/text_area" 
                    android:visibility="gone"/>
                
                <View
                    android:id="@+id/div_5"
                    style="@style/divider_light"
                    android:visibility="gone" />
                
                <RadioButton 
                    android:id="@+id/topics_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
                
                <TextView
                    android:id="@+id/topics_tv6"
                    style="@style/text_area" 
                    android:visibility="gone"/>
                
                <View
                    android:id="@+id/div_6"
                    style="@style/divider_light"
                    android:visibility="gone" />
		        
		    </RadioGroup>
		    
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">
		        
			    <Button
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="@string/topics_submit"
			        android:onClick="submit" />
			    
			    <Button
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="10dip"
	                android:text="@string/topics_cancel"
	                android:onClick="cancel" />
			    
		    </LinearLayout>
		    
		</LinearLayout>
	    
	</ScrollView>
    
</RelativeLayout>
