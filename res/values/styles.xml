<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_title_bar</item>
        <item name="android:textColor">#000000</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
    </style>
    <style name="button_title_bar">
        <item name="android:background">@drawable/btn_title_bar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>
    <style name="h1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>
    <style name="h2">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">5dip</item>
        <item name="android:layout_marginTop">10dip</item>
    </style>
    <style name="text_area">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textSize">16sp</item>
        
    </style>
    <style name="text_small">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">5dip</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">3dip</item>
        <item name="android:background">#a49583</item>
    </style>
    <style name="divider_light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:background">#a49583</item>
    </style>
</resources>
